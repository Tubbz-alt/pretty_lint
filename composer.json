{
  "description": "Pretty Lint JSON and YAML files",
  "authors": [
    {
      "name": "Thom Williams",
      "email": "thomscode@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Pnnl\\PrettyJSONYAML\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pnnl\\Tests\\": "tests"
    }
  },
  "config": {
    "sort-packages": true
  },
  "conflict": {
    "phpro/grumphp": "<0.18"
  },
  "license": "MIT",
  "minimum-stability": "dev",
  "name": "pnnl/pretty_lint",
  "prefer-stable": true,
  "require": {
    "php": "^7.2",
    "ext-json": "*",
    "dflydev/dot-access-data": "^1.1||^2.0",
    "phpro/grumphp": "~0.18"
  },
  "require-dev": {
    "nikic/php-parser": "^3.1 || ^4.9",
    "php-coveralls/php-coveralls": "^2.2",
    "php-parallel-lint/php-parallel-lint": "^1.2",
    "phpmd/phpmd": "^2.8",
    "phpunit/phpunit": "^8.5",
    "sensiolabs/security-checker": "^6.0",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "scripts": {
    "cbf": "phpcbf",
    "grumphp": "grumphp --ansi"
  },
  "type": "project"
}
